<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/txt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/abc_btn_check_to_on_mtrl_000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/abc_btn_check_to_on_mtrl_000"
                    android:drawableRight="@drawable/abc_btn_check_to_on_mtrl_000"
                    android:gravity="center_vertical"
                    android:text="@string/action_settings"
                    android:textColor="#000"
                    android:textColorLink="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/hello_world"
                    android:textColorLink="#fff" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape"
                android:text="@string/use_attention"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/im_btn_jpg"
                android:background="@android:color/white"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/abc_btn_check_to_on_mtrl_000" />
        </LinearLayout>
    </LinearLayout>
    <!-- 表示采用网格布局管理器 -->

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="3" >
    </GridLayout>

</RelativeLayout>