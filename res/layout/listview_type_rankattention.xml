<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center_vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/diyiming"
        android:gravity="center" />

    <ImageView
        android:id="@id/iv_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/tv_rank"
        android:scaleType="fitXY"
        android:src="@drawable/pic_loading_big" />

    <TextView
        android:id="@+id/tv_concern"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_tv_concern"
        android:gravity="center"
        android:text="@string/use_attention"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head"
        android:text="SSSSSS"
        android:textSize="@dimen/tv_size_title" />

    <TextView
        android:id="@+id/tv_sexandage"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_username"
        android:background="@drawable/girl"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="22"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_min" >
    </TextView>

    <TextView
        android:id="@+id/tv_gocitynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_username"
        android:layout_below="@id/tv_username"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:text="去过122个城市"
        android:textColor="@color/color_tv_gray"
        android:textSize="@dimen/tv_size_m" >
    </TextView>

    <TextView
        android:id="@+id/tv_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_head"
        android:layout_alignLeft="@id/tv_username"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/tv_concern"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="不一样的心情你好吗为很好情你好吗为很好"
        android:textColor="@color/color_tv_gray" >
    </TextView>

</RelativeLayout>