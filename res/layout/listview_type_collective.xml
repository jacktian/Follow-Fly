<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/iv_fillbg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_loading_big" />

    <ImageView
        android:id="@+id/iv_islike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_fillbg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/commercial_plan_heart" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_bg_tv_wline"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="xxxx"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_tag"
        android:text="xxx-xx-xx"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_allday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_starttime"
        android:text="xxx1xx"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_pepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:text="@string/pepo"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/tv_pepo"
        android:text="xx70x"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_title" />

    <TextView
        android:id="@+id/tv_playline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:text="xxxxx"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_m" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_fillbg"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="75dp"
        android:layout_toLeftOf="@+id/iv_islike"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_size_title" />

</RelativeLayout>