<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/head_vz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/pic_loading_big" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" >

                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="@string/hello_world"
                    android:textColorLink="#fff" />

                <TextView
                    android:id="@+id/tv_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/action_settings"
                    android:textColor="#000"
                    android:textColorLink="#fff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sexandage"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_alignBaseline="@+id/tv_mon"
                    android:layout_alignBottom="@+id/tv_mon"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/tv_mon"
                    android:layout_toRightOf="@+id/tv_mon"
                    android:background="@drawable/girl"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tv_size_min" />

                <TextView
                    android:id="@+id/tv_vz_concern"
                    android:layout_width="50dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_tv_concern"
                    android:gravity="center"
                    android:text="@string/use_attention"
                    android:textSize="@dimen/tv_size_m" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" >

            <include
                android:id="@+id/include_picture"
                layout="@layout/include_no9" />

            <TextView
                android:id="@+id/im_btn_jpg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/hello_world" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tV_comment"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/location"
        android:text="@string/action_settings"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tV_laudation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tV_comment"
        android:layout_alignBottom="@+id/tV_comment"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="14dp"
        android:drawableLeft="@drawable/xiangqu_2"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/xiangqu_2"
        android:gravity="top"
        android:text="@string/praise_vz" />

    <TextView
        android:id="@+id/tV_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/tV_laudation"
        android:layout_toStartOf="@id/tV_laudation"
        android:drawableLeft="@drawable/comments"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/comments"
        android:gravity="top"
        android:text="@string/comments"
        android:textSize="12sp" />

</RelativeLayout>