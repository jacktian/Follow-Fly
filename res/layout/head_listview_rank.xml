<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="13dp" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="@string/celebrityrank"
        android:textSize="@dimen/tv_size_title" />

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:drawablePadding="7dp"
        android:drawableRight="@drawable/ic_next"
        android:gravity="center_vertical"
        android:text="@string/more"
        android:textColor="@color/gray_d" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_title"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/ll_fthree"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_below="@id/v_line"
        android:layout_marginRight="13dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_no1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no1"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno1"
                style="@style/style_tv_user"
                android:text="xxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno1"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no2"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno2"
                style="@style/style_tv_user"
                android:text="xxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno2"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no3"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno3"
                style="@style/style_tv_user"
                android:text="xxxxxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno3"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fsix"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_below="@id/ll_fthree"
        android:layout_marginRight="13dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_no4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no4"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno4"
                style="@style/style_tv_user"
                android:text="xxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno4"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no5"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno5"
                style="@style/style_tv_user"
                android:text="xxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno5"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.suixin.vy.core.CircleImageView
                android:id="@+id/iv_no6"
                style="@style/style_im_head" />

            <TextView
                android:id="@+id/tv_usernameno6"
                style="@style/style_tv_user"
                android:text="xxxxxxxxxxx" />

            <TextView
                android:id="@+id/tv_gocitynumno6"
                style="@style/style_tv_gocitynum"
                android:text="去过122个城市" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/ll_fsix"
        android:layout_marginRight="13dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_online"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_loading_big" />

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/online"
                android:textSize="@dimen/latout_textsize_m" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_samecityone"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_loading_big" />

            <TextView
                android:id="@+id/tv_samecity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/samecityone"
                android:textSize="@dimen/latout_textsize_m" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_titlerank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_show"
        android:layout_marginTop="50dp"
        android:text="@string/popularitys"
        android:textSize="@dimen/tv_size_title"
        android:layout_marginBottom="15dp" />

</RelativeLayout>