<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

   <style name="style_tv_ll_addshow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_iv_ll_addshow">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="style_rl_ll_addshow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_tv_ll_home_classify">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/layout_textsize</item>
    </style>
    <style name="style_tv_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/latout_textsize_m</item>
    </style>

</resources>