<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_tv_ll_addshow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_iv_ll_addshow">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="style_rl_ll_addshow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_tv_ll_home_classify">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/layout_textsize</item>
    </style>

    <style name="style_tv_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/latout_textsize_m</item>
    </style>

    <style name="style_tv_tab">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_tv_tab</item>
        <item name="android:textColor">@color/color_tv_gray</item>
    </style>

    <style name="main_title_bar_style">
        <item name="android:background">@drawable/bg_titlebar_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44.0dip</item>
    </style>

    <style name="style_im_head">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/pic_loading_big</item>
    </style>

    <style name="style_tv_user">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/latout_textsize_m</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_tv_gocitynum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/color_tv_gray</item>
        <item name="android:textSize">@dimen/tv_size_min</item>
    </style>

    <style name="style_ll_timeselect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_tv_timeselect">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/latout_textsize_m</item>
    </style>

    <style name="style_tv_timeselect_hasbg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/shape_tv_blue_d_con</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/color_blue_d</item>
        <item name="android:textSize">@dimen/tv_size_xm</item>
    </style>

    <style name="style_tv_cityselect_hasbg">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@drawable/shape_tv_blue_d_con</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/color_blue_d</item>
        <item name="android:textSize">@dimen/tv_size_m</item>
    </style>

    <style name="style_ll_actionbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_iv_actionbar">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="style_tv_actionbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textSize">@dimen/tv_size_m</item>
    </style>
	<style name="ColorTranslucentTheme" parent="android:Theme.Translucent.NoTitleBar">
	</style>
</resources>